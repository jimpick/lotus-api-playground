{
  "name": "lotus-api-playground",
  "version": "1.0.0",
  "description": "Just playing around with Lotus",
  "main": "index.js",
  "scripts": {
    "dev": "caddy2 run",
    "prepare": "snowpack",
    "lint": "standardx",
    "test:node": "hundreds mocha tests/test-*.js",
    "test:browser": "polendina --cleanup tests/test-*.js",
    "test": "npm run lint && npm run test:node && npm run test:browser"
  },
  "keywords": [],
  "author": "Jim Pick (@jimpick)",
  "license": "MIT",
  "dependencies": {
    "htm": "^3.0.3",
    "it-pipe": "^1.1.0",
    "it-pushable": "^1.4.0",
    "preact": "^10.3.0",
    "react": "npm:@reactesm/react",
    "react-dom": "npm:@reactesm/react-dom",
    "react-json-view": "^1.19.1"
  },
  "devDependencies": {
    "mocha": "^7.1.0",
    "polendina": "^1.0.0",
    "snowpack": "^1.1.4",
    "standardx": "^5.0.0"
  },
  "snowpack": {
    "webDependencies": [
      "htm",
      "htm/react",
      "it-pipe",
      "it-pushable",
      "react",
      "react-dom",
      "react-json-view"
    ]
  },
  "standardx":{
    "ignore": [
      "/go"
    ]
  },
  "eslintConfig": {
    "rules": {
      "import/no-absolute-path": "off"
    },
    "env": {
      "browser": true,
      "node": true
    }
  }
}
