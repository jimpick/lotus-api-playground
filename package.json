{
  "name": "lotus-api-playground",
  "version": "1.0.0",
  "description": "Just playing around with Lotus",
  "type": "module",
  "main": "index.js",
  "scripts": {
    "dev": "caddy2 run --config Caddyfile.dev",
    "prod": "sudo caddy2 run --config Caddyfile.prod",
    "nginx": "nginx -c nginx.conf -p `pwd`",
    "prepare": "snowpack",
    "lint": "standardx",
    "test:node": "hundreds mocha",
    "test:browser": "polendina --cleanup test/test-*.js",
    "test": "npm run lint && npm run test:node && npm run test:browser"
  },
  "keywords": [],
  "author": "Jim Pick (@jimpick)",
  "license": "MIT",
  "dependencies": {
    "@filecoin-shipyard/lotus-client-schema": "^0.0.2",
    "@filecoin-shipyard/lotus-client-rpc": "^0.0.2",
    "@filecoin-shipyard/lotus-client-provider-browser": "^0.0.1",
    "@pika/react": "^16.13.1",
    "@pika/react-dom": "^16.13.1",
    "htm": "^3.0.3",
    "http-proxy": "^1.18.0",
    "it-pipe": "^1.1.0",
    "it-pushable": "^1.4.0",
    "react": "npm:@jimpick/react-experimental@16.13.0-0",
    "react-dom": "npm:@jimpick/react-dom-experimental@16.13.0-0",
    "react-json-view": "^1.19.1",
    "ws": "^7.2.3",
    "wscat": "^4.0.0"
  },
  "devDependencies": {
    "hundreds": "^0.0.2",
    "isomorphic-fetch": "^2.2.1",
    "mocha": "^7.1.0",
    "polendina": "^1.0.0",
    "snowpack": "^1.6.0",
    "standardx": "^5.0.0"
  },
  "snowpack": {
    "webDependencies": [
      "htm",
      "htm/react",
      "it-pipe",
      "it-pushable",
      "react",
      "react-dom",
      "react-json-view",
      "@filecoin-shipyard/lotus-client-provider-browser",
      "@filecoin-shipyard/lotus-client-rpc",
      "@filecoin-shipyard/lotus-client-schema/prototype/testnet-v3.js"
    ]
  },
  "standardx": {
    "ignore": [
      "/go"
    ],
    "globals": [
      "describe",
      "it"
    ]
  },
  "eslintConfig": {
    "rules": {
      "import/no-absolute-path": "off"
    },
    "env": {
      "browser": true,
      "node": true
    }
  },
  "mocha": {
    "timeout": 500000
  }
}
